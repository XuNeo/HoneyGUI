# RT-Thread building script for GuiEngine demo

from building import *

cwd = GetCurrentDir()
src = Split("""
""")


src += ['draw_img.c']
src += ['gui_matrix.c']
src += ['draw_font.c']
src += ['font_mem.c']
src += ['font_stb.c']
src += ['acc_sw.c']
src += ['acc_sw_raster.c']
src += ['acc_init.c']
src += ['acc_sw_blend.c']
src += ['acc_sw_rle.c']
src += ['acc_sw_cover.c']
src += ['acc_sw_bypass.c']
src += ['acc_sw_filter.c']
src += ['acc_sw_rle_bypass.c']
src += ['acc_sw_rle_cover.c']
src += ['acc_sw_rle_filter.c']

if GetDepend(['CONFIG_REALTEK_BUILD_VG_LITE']):
    src += ['acc_vg_lite.c']

if GetDepend(['CONFIG_REALTEK_BUILD_PPE']):
    src += ['acc_rtk_ppe.c']
    
if GetDepend(['CONFIG_REALTEK_BUILD_PPEV2']):
    src += ['acc_rtk_ppev2.c']

CPPPATH = [cwd]

group = DefineGroup('realgui/engine', src, depend = ['CONFIG_REALTEK_BUILD_GUI'], CPPPATH = CPPPATH)

Return('group')
